# Environment
NODE_ENV="development"

# Database (Development - SQLite)
DATABASE_URL="file:./prisma/dev.db"

# Database (Production - PlanetScale MySQL)
# DATABASE_URL="mysql://username:password@aws.connect.psdb.cloud/ai-go-prod?sslaccept=strict"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

# Production URLs (for deployment)
# NEXT_PUBLIC_API_URL="https://ai-go-api.vercel.app"
# FRONTEND_URL="https://ai-go.dothome.co.kr"

API_RATE_LIMIT_PER_MINUTE="60"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Region Configuration
PRIMARY_REGION="us-east"
AVAILABLE_REGIONS="us-east,us-west,eu-west,asia-east,asia-se"

# CDN Configuration
CDN_URL="https://cdn.ai-go.com"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-cloudflare-zone-id"

# AWS Configuration (for CloudFront and S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="ai-go-assets"
AWS_CLOUDFRONT_DISTRIBUTION_ID="your-distribution-id"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="development"
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
DATADOG_API_KEY="your-datadog-api-key"

# WebSocket Configuration
WEBSOCKET_URL="ws://localhost:3000"
SOCKET_IO_ADMIN_USERNAME="admin"
SOCKET_IO_ADMIN_PASSWORD="admin-password"

# Email Configuration
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
SMTP_FROM="noreply@ai-go.com"

# Feature Flags
ENABLE_NEWS_SECTION="true"
ENABLE_AI_CHAT="true"
ENABLE_DARK_MODE="true"
ENABLE_BENCHMARKS="true"
ENABLE_ANALYTICS="true"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# External APIs (if needed)
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."

# Development
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"