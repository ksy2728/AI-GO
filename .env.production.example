########################################
# AI-GO Production Environment Variables
########################################
# 이 파일을 .env.production.local로 복사하고 실제 값으로 업데이트하세요
# 각 변수에 대한 설명과 획득 방법이 포함되어 있습니다

#===========================================
# 🔴 필수 환경 변수 (반드시 설정해야 함)
#===========================================

# [필수] 기본 환경 설정
NODE_ENV="production"
# 앱이 배포된 후 Vercel이 제공하는 URL로 변경하세요
NEXT_PUBLIC_APP_URL="https://your-project.vercel.app"
NEXT_PUBLIC_API_URL="https://your-project.vercel.app"
FRONTEND_URL="https://your-project.vercel.app"

# [필수] Artificial Analysis API 키
#-------------------------------------------
# AI 모델 데이터를 가져오기 위한 필수 API 키
# 가입: https://artificialanalysis.ai
# API 키 획득: 계정 생성 후 Dashboard > API Keys에서 생성
# 주의: 이 키가 없으면 모델 데이터를 가져올 수 없습니다!
artificialanalysis_API_TOKEN="aa_..."

# [필수] 데이터베이스 연결 (하나 선택)
#-------------------------------------------
# Option 1: Neon PostgreSQL (추천 - 무료 티어 제공)
# 가입: https://neon.tech
# 프로젝트 생성 후 Dashboard에서 연결 문자열 복사
DATABASE_URL="postgresql://user:password@host.neon.tech/database?sslmode=require"

# Option 2: Vercel Postgres
# Vercel Dashboard > Storage > Create Database
# DATABASE_URL="postgres://default:password@host.postgres.vercel-storage.com:5432/verceldb?sslmode=require"

# Option 3: Supabase PostgreSQL
# 가입: https://supabase.com
# 프로젝트 생성 > Settings > Database > Connection string
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# Option 4: PlanetScale MySQL
# 가입: https://planetscale.com
# DATABASE_URL="mysql://user:password@host.planetscale.com/database?ssl={"rejectUnauthorized":true}"

#===========================================
# 🟡 권장 환경 변수 (기능 향상을 위해 권장)
#===========================================

# Redis 캐싱 (성능 향상)
#-------------------------------------------
# Upstash Redis 설정 (무료 티어 제공)
# 가입: https://upstash.com
# Redis 데이터베이스 생성 > Details > REST API
UPSTASH_REDIS_REST_URL="https://[your-endpoint].upstash.io"
UPSTASH_REDIS_REST_TOKEN="[your-token]"

# AI 제공자 API 키 (모델 정보 동기화)
#-------------------------------------------
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Anthropic: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY="sk-ant-..."

# Google AI: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY="AI..."

# Meta Llama: https://ai.meta.com/llama/
META_API_KEY="..."

#===========================================
# 🟢 선택 환경 변수 (필요시 설정)
#===========================================

# Artificial Analysis 동기화 설정
#-------------------------------------------
# 성능 필터 활성화 (기본: true)
# 평균 이하 지능 점수 모델 필터링
AA_ENABLE_PERFORMANCE_FILTER="true"

# 최소 지능 임계값 (선택사항)
# 설정하지 않으면 동적 평균 계산 사용
# AA_MIN_INTELLIGENCE="40"

# 인증 및 보안
#-------------------------------------------
# NextAuth 설정 (인증 기능 사용시)
NEXTAUTH_URL="https://your-project.vercel.app"
NEXTAUTH_SECRET="generate-random-32-char-string-here"

# JWT 토큰 시크릿
JWT_SECRET="another-random-32-char-string-here"

# 기능 플래그
#-------------------------------------------
# 뉴스 섹션 활성화
ENABLE_NEWS_SECTION="true"

# 벤치마크 섹션 활성화
ENABLE_BENCHMARKS="true"

# AI 채팅 기능 활성화
ENABLE_AI_CHAT="false"

# 다크 모드 활성화
ENABLE_DARK_MODE="true"

# 분석 기능 활성화
ENABLE_ANALYTICS="false"

# WebSocket 비활성화 (Vercel 서버리스 환경)
NEXT_PUBLIC_DISABLE_WEBSOCKET="true"
ENABLE_WEBSOCKET="false"

# 자동 동기화 설정
#-------------------------------------------
# 시작시 자동 데이터 동기화
AUTO_SYNC="true"

# 동기화 간격 (분)
SYNC_INTERVAL_MINUTES="60"

# 자동 동기화 비활성화
DISABLE_AUTO_SYNC="false"

# 모니터링 및 분석 (선택)
#-------------------------------------------
# Sentry 에러 추적
# 가입: https://sentry.io
SENTRY_DSN="https://[your-key]@sentry.io/[project-id]"
SENTRY_ENVIRONMENT="production"
SENTRY_ORG="your-org"
SENTRY_PROJECT="ai-go"

# Google Analytics
# https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Mixpanel 분석
# https://mixpanel.com
MIXPANEL_TOKEN="your-mixpanel-token"

# New Relic 모니터링
# https://newrelic.com
NEW_RELIC_LICENSE_KEY="your-license-key"

# Datadog 모니터링
# https://www.datadoghq.com
DATADOG_API_KEY="your-datadog-key"

# 보안 설정
#-------------------------------------------
# API 요청 제한 (분당)
API_RATE_LIMIT_PER_MINUTE="100"
RATE_LIMIT_PER_MINUTE="100"

# CORS 허용 도메인
CORS_ALLOWED_ORIGINS="https://your-project.vercel.app"

# 이메일 설정 (알림용)
#-------------------------------------------
# SendGrid SMTP
# https://sendgrid.com
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
SMTP_FROM="noreply@your-domain.com"

# 외부 서비스 웹훅
#-------------------------------------------
# Slack 알림
# https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# 일반 웹훅 시크릿
WEBHOOK_SECRET="your-webhook-secret"

# CDN 설정
#-------------------------------------------
# Cloudflare CDN
CDN_URL="https://cdn.your-domain.com"
CLOUDFLARE_API_TOKEN="your-cloudflare-token"
CLOUDFLARE_ZONE_ID="your-zone-id"

# AWS CloudFront/S3
AWS_ACCESS_KEY_ID="your-aws-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="ai-go-assets"
AWS_CLOUDFRONT_DISTRIBUTION_ID="your-distribution-id"

# 지역 설정
#-------------------------------------------
PRIMARY_REGION="us-east"
AVAILABLE_REGIONS="us-east,us-west,eu-west,asia-east"

# 성능 최적화
#-------------------------------------------
NEXT_TELEMETRY_DISABLED="1"
ANALYZE="false"

#===========================================
# 📝 환경 변수 설정 방법
#===========================================
# 1. Vercel Dashboard 접속
# 2. 프로젝트 선택 > Settings > Environment Variables
# 3. 각 변수를 하나씩 추가하거나 일괄 추가
# 4. 저장 후 재배포
#
# CLI 사용시:
# vercel env add DATABASE_URL production
# (프롬프트에 값 입력)
#
# 자세한 내용은 DEPLOYMENT_GUIDE.md 참조