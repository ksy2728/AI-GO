# Production Environment Variables Example
# Copy this file to .env.production and update with your actual values

# App Configuration
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_API_URL="https://your-domain.vercel.app"

# Database Options for Vercel
# Option 1: Vercel Postgres (Recommended)
DATABASE_URL="postgres://default:password@host.postgres.vercel-storage.com:5432/verceldb?sslmode=require"
POSTGRES_PRISMA_URL="postgres://default:password@host.postgres.vercel-storage.com:5432/verceldb?sslmode=require&pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgres://default:password@host.postgres.vercel-storage.com:5432/verceldb?sslmode=require"

# Option 2: Supabase
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# Option 3: Neon
# DATABASE_URL="postgresql://user:password@host.neon.tech/database?sslmode=require"

# Redis - Upstash for Vercel (Recommended)
REDIS_URL="redis://default:password@host.upstash.io:6379"
UPSTASH_REDIS_REST_URL="https://host.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# Authentication
JWT_SECRET="your-super-secure-jwt-secret-min-32-chars"
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars"

# API Keys (if needed)
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
GOOGLE_API_KEY="..."

# Analytics
NEXT_PUBLIC_ANALYTICS_URL="/api/analytics"
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Monitoring
SENTRY_DSN="https://..."
SENTRY_ORG="your-org"
SENTRY_PROJECT="ai-go"

# Feature Flags
ENABLE_REDIS_CACHE="true"
ENABLE_WEBSOCKET="false" # Disable for Vercel serverless
ENABLE_ANALYTICS="true"
NEXT_PUBLIC_DISABLE_WEBSOCKET="true" # Disable WebSocket for Vercel

# Auto Sync Configuration
AUTO_SYNC="true" # Enable automatic data sync on startup
SYNC_INTERVAL_MINUTES="60" # Sync every hour
DISABLE_AUTO_SYNC="false" # Set to true to disable auto-sync

# Performance
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"

# Security
RATE_LIMIT_PER_MINUTE="100"
CORS_ALLOWED_ORIGINS="https://your-domain.com,https://api.your-domain.com"

# External Services
WEBHOOK_SECRET="your-webhook-secret"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# CDN
NEXT_PUBLIC_CDN_URL="https://cdn.your-domain.com"
NEXT_PUBLIC_ASSETS_PREFIX="/assets"