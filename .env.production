# Production Environment Variables

# App Configuration
NEXT_PUBLIC_APP_URL=https://ai-server-information.vercel.app
NEXT_PUBLIC_API_URL=https://ai-server-information.vercel.app
NODE_ENV=production
HOSTNAME=0.0.0.0
PORT=3000

# Database - Disabled for Vercel (GitHub data source only)
# DATABASE_URL="postgresql://user:password@localhost:5432/aigo_db?schema=public"
# DIRECT_URL="postgresql://user:password@localhost:5432/aigo_db?schema=public"

# TimescaleDB - Disabled for Vercel
# TIMESCALE_URL="postgresql://user:password@localhost:5433/aigo_timeseries?schema=public"

# Redis - Disabled for Vercel
# REDIS_URL="redis://localhost:6379"

# GitHub Data Source Configuration
GITHUB_REPO=ksy2728/AI-GO
GITHUB_BRANCH=master
DATA_SOURCE=github

# Authentication
NEXTAUTH_URL=https://ai-server-information.vercel.app
NEXTAUTH_SECRET=your-production-secret-key-minimum-32-characters

# WebSocket Configuration - Disabled for Vercel serverless
NEXT_PUBLIC_WEBSOCKET_URL=
NEXT_PUBLIC_DISABLE_WEBSOCKET=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://ai-server-information.vercel.app

# Feature Flags
ENABLE_NEWS_SECTION=true
ENABLE_AI_CHAT=true
ENABLE_DARK_MODE=true
ENABLE_BENCHMARKS=true
ENABLE_ANALYTICS=true

# Monitoring & Analytics
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
GOOGLE_ANALYTICS_ID=

# External APIs - Not required for GitHub data source
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_AI_API_KEY=
# REPLICATE_API_TOKEN=

# Cron Job Security - Set in Vercel environment variables
CRON_SECRET=your-secure-cron-secret-here

# Security
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE=10mb
SESSION_TIMEOUT=86400

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Production Settings
SKIP_ENV_VALIDATION=false