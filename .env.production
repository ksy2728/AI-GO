# Production Environment Variables

# App Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com
NODE_ENV=production
HOSTNAME=0.0.0.0
PORT=3000

# Database - PostgreSQL for production
DATABASE_URL="postgresql://user:password@localhost:5432/aigo_db?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/aigo_db?schema=public"

# TimescaleDB for time-series data
TIMESCALE_URL="postgresql://user:password@localhost:5433/aigo_timeseries?schema=public"

# Redis for caching and sessions
REDIS_URL="redis://localhost:6379"

# Authentication
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-production-secret-key-minimum-32-characters

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=wss://your-domain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Feature Flags
ENABLE_NEWS_SECTION=true
ENABLE_AI_CHAT=true
ENABLE_DARK_MODE=true
ENABLE_BENCHMARKS=true
ENABLE_ANALYTICS=true

# Monitoring & Analytics
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
GOOGLE_ANALYTICS_ID=

# External APIs (if needed)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# Security
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE=10mb
SESSION_TIMEOUT=86400

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Production Settings
SKIP_ENV_VALIDATION=false