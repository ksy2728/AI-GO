name: Sync Model Data

on:
  schedule:
    # 5분마다 실행 (로컬 OpenAI 동기화 주기와 동일)
    - cron: '*/5 * * * *'
  workflow_dispatch: # 수동 실행 가능
  push:
    branches:
      - master
    paths:
      - 'scripts/sync-models.js'
      - 'scripts/export-to-json.js'
      - '.github/workflows/sync-data.yml'

jobs:
  sync-data:
    runs-on: ubuntu-latest
    
    permissions:
      contents: write
      
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'
          
      - name: Install dependencies
        run: |
          npm ci --production=false
          npx prisma generate
          
      - name: Setup database
        run: |
          npx prisma db push --skip-generate
          
      - name: Run sync script
        run: |
          node scripts/sync-models.js
        env:
          DATABASE_URL: "file:./prisma/dev.db"
          NODE_ENV: production
          
      - name: Extract data to JSON
        run: |
          node scripts/export-to-json.js
        env:
          DATABASE_URL: "file:./prisma/dev.db"
          
      - name: Check for changes
        id: check_changes
        run: |
          if git diff --quiet data/; then
            echo "changes=false" >> $GITHUB_OUTPUT
            echo "ℹ️ No changes detected in data files"
          else
            echo "changes=true" >> $GITHUB_OUTPUT
            echo "✅ Changes detected in data files"
            git diff --stat data/
          fi
          
      - name: Commit and push changes
        if: steps.check_changes.outputs.changes == 'true'
        run: |
          git config --local user.email "action@github.com"
          git config --local user.name "GitHub Action"
          git add data/
          
          # 변경 사항 요약 생성
          TOTAL_MODELS=$(jq -r '.statistics.totalModels' data/models.json)
          ACTIVE_MODELS=$(jq -r '.statistics.activeModels' data/models.json)
          OPERATIONAL=$(jq -r '.statistics.operationalModels' data/models.json)
          AVG_AVAILABILITY=$(jq -r '.statistics.avgAvailability' data/models.json)
          
          git commit -m "chore: update model data [skip ci]" -m "📊 Models: ${TOTAL_MODELS} | Active: ${ACTIVE_MODELS} | Operational: ${OPERATIONAL} | Availability: ${AVG_AVAILABILITY}%
          
          🤖 Automated sync at $(date -u '+%Y-%m-%d %H:%M:%S UTC')
          🔄 Next sync in 5 minutes"
          git push